@model Metani.Models.TanahJoin

@{
    ViewBag.Title = "Delete Tanah";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main-content">
        <section class="section">
            <div class="section-header">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="section-body">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Confirmation : Are you sure you want to delete this?</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-md">
                                        <tr>
                                            <th>ID</th>
                                            <td>@Model.IdTanah</td>
                                        </tr>
                                        <tr>
                                            <th>Jenis Tanah</th>
                                            <td>@Model.JenisTanah.NamaJenisTanah</td>
                                        </tr>
                                        <tr>
                                            <th>Luas Tanah</th>
                                            <td>@Model.LuasTanah</td>
                                        </tr>
                                        <tr>
                                            <th>Suhu</th>
                                            <td>@Model.Suhu</td>
                                        </tr>
                                        <tr>
                                            <th>Kecamatan</th>
                                            <td>@Model.Lokasi.Kecamatan</td>
                                        </tr>
                                        <tr>
                                            <th>Action</th>
                                            <td>
                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                                <a class="btn btn-info" href="~/Tanah/Index">Back to List</a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}