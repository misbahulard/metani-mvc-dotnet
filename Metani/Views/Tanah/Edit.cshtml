@model Metani.Models.TanahLokasi

@{
    ViewBag.Title = "Update";
}
<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Movie</h4>
    <hr />

    <input type="text" placeholder="id" name="idTanah" value="@Model.tanah.IdTanah" />

    <div class="form-group">
        <label class="control-label col-md-2">Nama Jenis Tanah : </label>
        <div class="col-md-10">
            <select class="form-control" id="idJenisTanah" name="idJenisTanah">
                @foreach (var item in Model.jenisTanah)
                {
                    <option value="@item.IdJenisTanah">
                        @item.NamaJenisTanah
                    </option>
                }

            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Luas Tanah : </label>
        <div class="col-md-10">
            <input type="text" placeholder="Masukkan Luas Tanah" id="luasTanah" name="luasTanah" value="@Model.tanah.LuasTanah">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Suhu : </label>
        <div class="col-md-10">
            <input type="text" placeholder="Masukkan Suhu" id="suhu" name="suhu" value="@Model.tanah.Suhu">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nama Kecamatan : </label>
        <div class="col-md-10">
            <select class="form-control" id="idLokasi" name="idLokasi">
                @foreach (var item in Model.lokasi)
                {
                    <option value="@item.IdLokasi">
                        @item.Kecamatan
                    </option>
                }

            </select>
        </div>
    </div>


    @*Genre and Price removed for brevity.*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}