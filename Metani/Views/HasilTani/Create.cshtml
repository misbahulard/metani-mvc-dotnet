@model Metani.Models.TaniLokasi

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>HasilTani</h4>
    <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Nama Jenis Tani : </label>
            <div class="col-md-10">
                <select class="form-control" id="idJenisTani" name="idJenisTani">
                    @foreach (var item in Model.jenisTani)
                    {
                        <option value="@item.IdJenisTani">
                            @item.NamaJenisTani
                        </option>
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Jumlah : </label>
            <div class="col-md-10">
                <input type="text" placeholder="Masukkan jumlah" id="jumlah" name="jumlah">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nama Kecamatan : </label>
            <div class="col-md-10">
                <select class="form-control" id="idLokasi" name="idLokasi">
                    @foreach (var item in Model.lokasi)
                    {
                        <option value="@item.IdLokasi">
                            @item.Kecamatan
                        </option>
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
